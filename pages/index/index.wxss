.overflow {
    top:0px;
    left: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    z-index: 0;
}
page {
  background-color: #feebed;
}
.container {
  height: 100vh;
}
.swiper_header {
  padding-bottom: 40rpx;
  background-color: #fff;
  width: 100vw;
  height: 400rpx;
}
.swiper {
  padding: 15rpx;
  height: 400rpx;
  width: 100vw;
}
.swiper swiper-item {
  border-radius: 20rpx;
  overflow: hidden;
}
.swiper navigator{
  width: 100%;
}
.swiper navigator image {
  width: 100%;
}

.video_box .video_header {
  padding: 0 20rpx 0 30rpx;
  background-color: #fff;
}
.video_header .title_text {
  color: #de778f;
}
 .video_container {
  padding: 0 20rpx 0 20rpx;
}
 .message_box, .ask_box {
  padding: 0 20rpx 0 30rpx;
}
.video_header, .message_header, .ask_header {
  display: flex;
  justify-content: space-between;
  font-size: 40rpx;
  font-weight: bold;
}
.message_box .title_text {
  color: #000;
}
.ask_box {
  color: #574faf;
}
.message_box, .ask_box {
  margin-top: 50rpx;
}
.read_more {
  text-decoration: underline;
  color: #000;
  font-size: 25rpx;
  display: flex;
  align-items: flex-end;
}
.video_item,.message_item {
  margin-top: 15rpx;
  background-color: #fff;
  display: flex;
  height: 200rpx;
}
.video_item navigator ,.message_item navigator{
  width: 100%;
  height: 100%;
  display: flex;
}
.video_item  .img_box ,.message_item  .img_box {
  flex: 3;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.video_item  .img_box image {
  width: 100%;
  height: 100%;
}
.video_item .img_box  .iconfont {
  background-color: #f2d1cc;
  font-size: 60rpx;
  color: #ce5f6f;
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%,-50%);
  opacity: 0.5;
}
.video_item .desc_box ,.message_item  .desc_box {
  flex: 6;
  display:  flex;
  font-size: 28rpx;
  flex-direction: column;
  padding: 20rpx 30rpx;
  justify-content: space-between;
}
.video_item .desc_box .desc_text {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.bottom_box .iconfont {
  margin-right: 10rpx;
}
.desc_box .desc_bottom {
  display: flex;
  justify-content: flex-end;
  padding-right: 20rpx;
  color: #d64e6e;
  font-size: 20rpx;
}
.bottom_box,.comment_num, .create_time{
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom_box>view:last-child {
  margin-left: 40rpx;
}
.message_item .desc_box .desc_title{
  font-size: 30rpx;
}
.message_item .desc_box .message_type {
  font-size: 15rpx;
  color: grey;
}
.message_item  .img_box image {
  width: 100%;
}
.message_item .desc_text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
} 
.message_item .desc_text view:last-child {
  margin-top: 10rpx;
  font-size: 25rpx;
}