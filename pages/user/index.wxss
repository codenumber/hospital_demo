/* pages/user/index.wxss */
page {
  background-color: #f2f2f2;
}
.user_header {
  height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
}
.user_box {
  display: flex;
  width: 300rpx;
  flex-direction: column;
  align-items: center;
}
.user_box .img_box {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #4b4b4b;
  overflow: hidden;
  border-radius: 50%;
  padding: 10rpx;
}
.img_box .img {
  width: 100%;
}
.login_box {
  display: flex;
  flex-direction: column;
}
.login_box .btn {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  color: #d95a78;
  font-size: 30rpx;
  font-weight: bold;
}
.login_box button::after {
  width: 0;
  height: 0;
}
.login_box .nav {
  display: flex;
  border: 2rpx solid #312aa4;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  margin-top: 20rpx;
}
.nav .iconfont {
  color: #312aa4;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.nav .nav_text {
  font-size: 28rpx;
  color: #312aa4;
}
.haveuserinfo_box {
  width: 100%;
  height: 100%;
  display: flex;
}
.user_img_box {
  flex: 1.8;
}
.user_img {
  width: 80%;
  border: 2rpx solid #4b4b4b;
  border-radius: 50%;
  overflow: hidden;
}
.user_right_box {
  flex: 5;
  display: flex;
  flex-direction: column;
}
.user_right_box .user_info {
  display: flex;
  flex: 3;
  justify-content: space-between;
  align-items: center;
}
.user_text .nav {
  display: flex;
  border: 2rpx solid #2b22a0;
  border-radius: 20rpx;
  padding: 0 15rpx;
  margin-top: 15rpx;
}
.nav .nav_text ,.nav .iconfont {
  font-size: 24rpx;
}
.user_info .cal_box .iconfont{
  font-size: 80rpx;
  color: #d64f6f;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user_info .cal_box .click_text {
  font-size: 24rpx;
  color: #d64f6f;
}
.user_right_box .bottom_box {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.bottom_box .integral_box, .bottom_box .kids_box {
  display: flex;
  justify-content: space-between;

}
.integral_box .integral_text ,.kids_box .kids_text {
  display: flex;
  height: 50rpx;
  align-items: center;
}
.integral_box .integral_nav,  .kids_box .kids_nav {
  font-size: 24rpx;
  text-decoration: underline;
  display: flex;
  align-items: center;
}
.integral_box .integral_text .integral_img , .kids_box .kids_text .kids_img {
  width: 40rpx;
  margin-right: 20rpx;
}
.container  {
  margin-top: 40rpx;
}
.record_box .record_title {
  padding-left: 20rpx;
  font-size: 36rpx;
  font-weight: 1000;
  padding-bottom: 20rpx;
  background-color: #fff;
  padding-top: 5rpx;
}
.record_item {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.record_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #808181;
  padding: 10rpx 0;
} 
.record_top .top_left  {
  display: flex;
}
.record_top .top_left .doctor_header {
  width: 50rpx;
  margin-right: 15rpx;
}
.record_top .top_left .doctor_name {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #5450b0;
  font-weight: 800;
}
.record_top .top_right {
  width: 80rpx;
}
.record_top .top_right .email {
  width: 60rpx;
}
.record_content {
  text-indent: 26rpx;
  background-color: #fff;
  height: 120rpx;
  display: flex;
  font-size: 32rpx;
}
.record_content .text_num {
  color: grey;
}
.record_bottom {
  display: flex;
  justify-content: flex-end;
  font-size: 25rpx;
  padding-bottom: 15rpx;
}
.no_record {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50vh;
}
.no_record .no_record_text {
  display: flex;
  font-size: 30rpx;
  color: grey;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}