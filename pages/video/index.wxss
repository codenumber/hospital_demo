/* pages/video/index.wxss */
page {
  background-color: #feebed;
}
.video_box {
  padding-bottom: 15rpx;
  background-color: #fff;
}
.video {
  width: 100%;
}
.video_title_box {
  padding: 15rpx;
}
.video_title_box .title {
  font-size: 30rpx;
  font-weight: 800;
}
.video_title_box .pre {
  padding: 15rpx 40rpx;
}
.video_bottom {
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx 0 0;
}
.video_bottom .share_box {
  display: flex;
  align-items: center;
  background-color: white;
  height: 28rpx;
  overflow: inherit;
  padding: 0;
  justify-content: flex-start;
}
button::after {
  border: 0;
  content: none;
}
.share_box .integral_img {
  width: 50rpx;
  margin-right: 10rpx;
}
.share_box .share_text {
  font-size: 24rpx;
  color: #d64f6f;
  text-decoration: underline;
}
.tool_box, .comment_num, .create_time {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
}
.create_time {
  margin-left: 20rpx;
}
.container {
  padding-top: 40rpx;
}
.recommend_box {
  background-color: #fff;
}
.recommend_title {
  padding: 15rpx;
  font-weight: 800;
}
.recommend {
  height: 300rpx;
  width: 100vw;
  white-space: nowrap;
}
.recommend_item {
  width: 300rpx;
  height: 100%;
  display: inline-block;
  margin: 5rpx 20rpx;
  vertical-align: top;
}
.item_picture {
  height: 180rpx;
  width: 300rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item_image {
  width: 100%;
  height: 160rpx;
}
.item_title {
  font-size: 25rpx;
  padding: 15rpx;
  height: 80rpx;
  white-space: normal;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}