.upload_item {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.upload_item .img_box {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.img_box .img {
  width: 100%;
  height: 100%;
}

.del_btn {
  display: flex;
  height: 40rpx;
  width: 40rpx;
  font-size: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
  transform: translate(50%, -50%);
  border: 2rpx solid grey;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
  color: grey;
  background-color: #fff;
}