.message_item {
  width: 100%;
  height: 100%;
  display: flex;
  background-color: #fff;
  height: 200rpx;
}

.message_item  .img_box {
  flex: 3;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.message_item .img_box .img_over {
  height: 80%;
  width: 80%;
  overflow: hidden;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.message_item .img_box .img{
  width: 100%;
  height: 100%;
}
.img_over .iconfont {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: #d64e6e;
  font-size: 50rpx;
  opacity: 0.5;
}

.message_item  .desc_box {
  flex: 6;
  display:  flex;
  font-size: 28rpx;
  flex-direction: column;
  padding: 10px 20rpx;
  justify-content: space-between;
}

.comment_num .iconfont,.create_time .iconfont {
  margin-right: 10rpx;
  color: #d64e6e;
  display: flex;
  align-items: center;
  justify-content: center;
}
.desc_box .desc_bottom {
  display: flex;
  justify-content: flex-end;
  padding-right: 20rpx;
  color: #d64e6e;
  font-size: 20rpx;
}
.bottom_box,.comment_num, .create_time{
  display: flex;
  align-items: center;
}
.bottom_box>view:last-child {
  margin-left: 40rpx;
}
.message_item .desc_box .desc_title{

  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.message_item .desc_box .message_type {
  font-size: 15rpx;
  color: grey;
}
.message_item  .img_box image {
  width: 100%;
}
.message_item .desc_text {
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
} 
.message_item .desc_text view:last-child {
  margin-top: 10rpx;
  font-size: 25rpx;
}