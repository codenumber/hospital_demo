<view class="bg_view" bindtouchmove="preventMove" wx:if="{{isShow}}">
  <view  class="auth_modal" >
    <view class="auth_header">
      <view class="auth_title">
        您还未登陆哦
      </view>
    </view>

    <view class="auth_content">
      <image class="img" mode="widthFix" src="../../icons/bussiness-man.png"></image>
    </view>
    <view class="auth_footer">
      <view class="cancle">
        <button class="cancle_btn" bindtap="cancleLogin">暂不登录</button>
      </view>
      <view class="confirm">
        <button class="confirm_btn" open-type="getUserInfo" bindgetuserinfo="handleUserInfo">登录授权</button>
      </view> 
    </view>
  </view>
  
</view>